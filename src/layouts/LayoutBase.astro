---
import "remixicon/fonts/remixicon.css";
import Aside from "../components/Aside.astro";
import Player from "../components/Player";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/iconMusic.svg" />
    <meta name="viewport" content="width=device-width" />
    <!-- <meta name="generator" content={} /> -->
    <ViewTransitions fallback="none" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <style>
      main {
        width: calc(100% - 270px);
      }

      @media (max-width: 768px) {
        main {
          width: 100%;
        }
      }
    </style>
  </head>
  <body class="bg-[#f4f6ff] min-h-screen">
    <div class="pt-6 px-2 md:px-6 gap-6 w-full flex">
      <Aside />
      <main class="flex flex-col gap-10">
        <slot />
      </main>
    </div>
    <Player transition:persist client:visible transition:name="player" />
    <style is:global>
      body {
        font-family:
          "Barlow",
          sans-serif,
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          "Open Sans",
          "Helvetica Neue",
          sans-serif;
      }
      *::-webkit-scrollbar {
        width: 6px;
        height: 6px;
      }
      *::-webkit-scrollbar-thumb {
        background: #0080ff6a;
        border-radius: 4px;
      }
      *::-webkit-scrollbar-thumb:hover {
        background: #0059ffbe;
      }
      *::-webkit-scrollbar-thumb:active {
        background-color: #0059ffbe;
      }
      @media (max-width: 768px) {
        *::-webkit-scrollbar-thumb {
          background: #0059ffbe;
        }
      }
    </style>
  </body>
</html>
